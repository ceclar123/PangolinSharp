<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="using:Pangolin.Desktop.ViewModels.Image"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="Pangolin.Desktop.Views.Image.ImageViewUserControl"
             x:DataType="vm:ImageViewUserControlViewModel">
    <Design.DataContext>
        <vm:ImageViewUserControlViewModel />
    </Design.DataContext>
    <Grid ColumnDefinitions="*,70,70" Margin="0,10,0,0">
        <Grid.RowDefinitions>
            <RowDefinition Height="50" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <TextBox Text="{Binding ImageUrl, Mode=TwoWay}" HorizontalAlignment="Stretch"
                 Margin="5" Grid.Column="0" Grid.Row="0" />
        <Button Content="加载" Command="{Binding CmdLoadImage}" HorizontalAlignment="Stretch" Grid.Column="1" Grid.Row="0" />
        <Button Content="下载" Command="{Binding CmdBrowseFilePath}" HorizontalAlignment="Stretch" Grid.Column="2" Grid.Row="0" />
        <Image Source="{Binding ImageSource}" VerticalAlignment="Stretch" Stretch="Uniform"
               Grid.Column="0" Grid.Row="1" Grid.ColumnSpan="3" />
    </Grid>
</UserControl>