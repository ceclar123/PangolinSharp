<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="Pangolin.Desktop.Views.Json.JsonConvertCsvUserControl"
             xmlns:json="clr-namespace:Pangolin.Desktop.ViewModels.Json"
             x:DataType="json:JsonConvertCsvUserControlViewModel">
    <Design.DataContext>
        <json:JsonConvertCsvUserControlViewModel />
    </Design.DataContext>
    <Grid ColumnDefinitions="*" Margin="0,10,0,0">
        <Grid.RowDefinitions>
            <RowDefinition Height="200" />
            <RowDefinition Height="60" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <TextBox HorizontalContentAlignment="Stretch" HorizontalAlignment="Stretch" Height="200" AcceptsReturn="True"
                 TextWrapping="Wrap" Grid.Column="0" Grid.Row="0" Text="{Binding Path=JsonString, Mode=TwoWay}" />
        <RelativePanel Height="45" Grid.Column="0" Grid.Row="1">
            <Button Name="BtnCheck" Content="校验" Width="60" Height="40" Command="{Binding CmdCheck}" />
            <Button Name="BtnExport" Content="导出" Width="60" Height="40" RelativePanel.RightOf="BtnCheck"
                    Command="{Binding CmdExport}" />
            <Label Name="LblSplit" Content="分隔符:" Width="60" Height="40" VerticalContentAlignment="Center"
                   RelativePanel.RightOf="BtnExport" />
            <TextBox Width="100" Height="40" Watermark="默认tab符" RelativePanel.RightOf="LblSplit"
                     Text="{Binding SplitChar}" />
        </RelativePanel>
        <DataGrid x:Name="JsonGrid" ItemsSource="{Binding Rows}" AutoGenerateColumns="False"
                  HorizontalAlignment="Stretch" VerticalAlignment="Stretch"
                  Margin="1"
                  IsReadOnly="True"
                  CanUserReorderColumns="True"
                  CanUserResizeColumns="True"
                  CanUserSortColumns="False"
                  GridLinesVisibility="All"
                  BorderThickness="1" BorderBrush="Gray" Grid.Column="0" Grid.Row="2">
            <DataGrid.Columns>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</UserControl>